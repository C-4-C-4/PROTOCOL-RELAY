---
import Layout from '../layouts/Layout.astro';
import ProtocolTerminal from '../components/ProtocolTerminal.jsx';
---

<Layout title="PROTOCOL-RELAY // GIT ACCELERATOR">
    
    <!-- 顶部导航栏 -->
    <header class="fixed top-0 left-0 w-full z-50 bg-paper border-b-2 border-ink h-14 flex items-center justify-between px-6 shadow-sm">
        <div class="flex items-center space-x-3">
            <div class="w-3 h-3 bg-safety-orange rounded-full animate-pulse"></div>
            <!-- 修改点 1：左上角名称 -->
            <span class="font-bold tracking-widest text-sm">PROTOCOL-RELAY</span>
        </div>
        
        <!-- 修改点 2：右上角文字已删除 -->
        <div></div> 
    </header>

    <main class="relative z-10 pt-20 pb-20 px-4 min-h-screen flex flex-col items-center justify-center">
        
        <!-- 核心交互组件 -->
        <ProtocolTerminal client:load />

    </main>

    <!-- 底部版权栏 -->
    <footer class="fixed bottom-0 left-0 w-full bg-paper border-t-2 border-ink py-2 text-center text-[10px] uppercase tracking-widest z-50 flex justify-center space-x-4">
        <!-- 修改点 3：底部版权与仓库链接 -->
        <span>&copy; 2025 CCCC4444</span>
        <span>//</span>
        <a href="https://github.com/C-4-C-4/PROTOCOL-RELAY" target="_blank" class="hover:text-safety-orange hover:underline transition-colors">
            REPOSITORY: PROTOCOL-RELAY
        </a>
    </footer>

</Layout>